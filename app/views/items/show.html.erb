<div class="container">
  <div class="row">
    <div class="col-8">

      <div id="carouselExampleIndicators", class='carousel slide' data-ride='carousel'>
        <ol class='carousel-indicators'>
          <% if @item.images.present? %>
            <% @item.images.each_with_index do |image,index| %>
              <li data-target='#carouselExampleIndicators' data-slide-to='<%= index %>' class='<%= index == 0 ? 'active' : '' %>'></li>
            <% end %>
          <% else %>
            <li data-target='#carouselExampleIndicators' data-slide-to='0' class='active'></li>
          <% end %>
        </ol>
        <div class='carousel-inner'>
          <% if @item.images.present? %>
            <% @item.images.each_with_index do |image,index| %>
              <div class='carousel-item <%= index == 0 ? 'active' : '' %>'>
                <%= image_tag(image, size: '800x500', class:'d-block d-100') %>
              </div>
            <% end %>
          <% else %>
            <div class='carousel-item active'>
              <%= image_tag('defult.jpeg', size: '500x500', class:'d-block d-100') %>
            </div>
          <% end %>
        </div>
        <a class='carousel-control-prev' href='#carouselExampleIndicators' role='button' data-slide='prev'>
          <span class='carousel-control-prev-icon' aria-hidden='true'></span>
          <span class='sr-only'>Previous</span>
        </a>
        <a class='carousel-control-next' href='#carouselExampleIndicators' role='button' data-slide='next'>
          <span class='carousel-control-next-icon' aria-hidden='true'></span>
          <span class='sr-only'>Next</span>
        </a>
      </div>

    </div>
    <div class="col-4">
      <table class="table table-bordered">
        <thead>
        </thead>
        <tbody>
          <tr>
            <td>Title</td>
            <td colspan="2"><strong><%= @item.title %></strong></td>
          </tr>
          <tr>
            <td>Price $</td>
            <td colspan="2"><%= @item.price %></td>
          </tr>
          <tr>
            <td>Description</td>
            <td colspan="2"><%= @item.description %></td>
          </tr>
          <tr>
            <td>Restaurant</td>
            <td colspan="2"><%= @item.restaurants.first.title %></td>
          </tr>
          <tr>
            <td colspan="1"></td>
            <td colspan="2 align-center">
              <ul class="list-group">
                <div class="dropdown">
                  <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Categories
                  </button>
                  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <% @item.categories.each do |x| %>
                      <a class="dropdown-item" href="#"><%= x.title %></a>
                    <% end %>
                  </div>
                </div>
              </ul>
            </td>
          </tr>
        </tbody>
      </table>
      <%= link_to 'Back', restaurant_path(@restaurant), class:"btn btn-dark"%>
      <a href="#" class="btn btn-dark">Add to Cart</a>
    </div>
  </div>
</div>
