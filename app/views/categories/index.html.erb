<div class="container">
  <h1>Categories</h1>
  <table class="table text-center">
    <thead class="thead-dark">
      <tr>
        <th>Title</th>
        <th>Show</th>
        <% if current_user.admin? %>
          <th>No of Items</th>
          <th>Edit</th>
          <th>Delete</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <%= render @categories%>
    </tbody>
  </table>

  <%= link_to 'Back', root_path, class:"btn btn-dark"%>
  <% if current_user.admin? %>
    <%= link_to 'New Category', new_category_path, class:"btn btn-dark"%>
  <% end %>
</div>
