<div class="container">
  <table class="table text-center">
    <thead class="thead-dark">
      <tr>
        <th>Title</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Increase</th>
        <th>Decrease</th>
        <th>Remove</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <% if cart.items.count == 0%>
        <tr>
          <td><strong>No Items At the moment</strong></td>
        </tr>
      <% else %>
        <%= render partial: "cart_item", collection: cart.cart_items %>
      <% end %>
    </tbody>
    <tfoot>
      <td>
        <% if cart.cart_items.count != 0 %>
          <%= button_to 'Clear Cart', clear_cart_carts_cart_items_path, class:"btn btn-dark" %>
        <% end %>
      </td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td>
        <strong>Total</strong>
      </td>
      <td>$<%= calculate_total(cart.cart_items) %></td>
    </tfoot>
  </table>
</div>
