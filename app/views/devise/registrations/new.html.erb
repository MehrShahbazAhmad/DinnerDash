<div class="container">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages" , resource: resource %>

      <div class="field form-group pb-2 pt-5">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: 'Email', required: true  %>
      </div>

      <div class="field form-group pb-2">
          <%= f.text_field :first_name, class: "form-control", placeholder: 'First name', required: true  %>
      </div>

      <div class="field form-group pb-2">
          <%= f.text_field :last_name, class: "form-control", placeholder: 'Last name', required: true  %>
      </div>

      <div class="field form-group pb-2">
          <%= f.text_field :user_name, class: "form-control", placeholder: 'User name'  %>
      </div>

      <div class="field form-group pb-2">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password (#{@minimum_password_length} characters minimum)", required: true %>
      </div>

      <div class="field form-group pb-2">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: 'Enter Password again', required: true %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:"btn btn-dark"  %><br><br>
        <%= render "devise/shared/links" %>
      </div>
      <% end %>

</div>
