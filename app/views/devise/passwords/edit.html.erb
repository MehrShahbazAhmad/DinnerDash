<h2>Change your password</h2>
<h3>New Password</h3>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field form-group pb-2">
    <%= f.password_field :password, class:"form-control", placeholder: 'Password (6 characters minimum)', required: true, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field form-group pb-2">
    <%= f.password_field :password_confirmation, class:"form-control", placeholder: 'Confirm new password', required: true, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password",class:"btn btn-dark mb-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
